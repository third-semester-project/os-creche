<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="680" prefWidth="900" styleClass="root" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.creche.controller.UsuarioController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: #00000000;" styleClass="app-bar">
            <children>
                <Label styleClass="app-title" text="Usuários" visible="false" />
                <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnExcluirUsuario" onAction="#onExcluirUsuario" styleClass="danger" text="Excluir Usuário" />
                <Button fx:id="btnInativarUsuario" onAction="#onInativarUsuario" styleClass="danger" text="Inativar Usuário" />
                <Button fx:id="btnEditarUsuario" onAction="#onEditarUsuario" text="Editar Usuário" />
                <Button fx:id="btnNovoUsuario" onAction="#onNovoUsuario" text="Novo Usuário" />
            </children>
            <padding>
                <Insets bottom="8" left="16" right="16" top="8" />
            </padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="12">
            <padding>
                <Insets bottom="16" left="16" right="16" top="12" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <children>
                        <TextField fx:id="txtBuscaUsuario" onAction="#onBuscar" promptText="Buscar por nome ou e-mail..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnBuscarUsuario" onAction="#onBuscar" text="Buscar" />
                    </children>
                </HBox>

                <TableView fx:id="tvUsuarios" prefHeight="560">
                    <columns>
                        <TableColumn fx:id="colNome" prefWidth="240" text="Nome" />
                        <TableColumn fx:id="colEmail" prefWidth="240" text="E-mail" />
                        <TableColumn fx:id="colPapeis" prefWidth="200" text="Papéis" />
                        <TableColumn fx:id="colAtivo" prefWidth="80" text="Ativo" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
