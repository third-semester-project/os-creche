<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="680" prefWidth="1000" styleClass="root" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.creche.controller.OSListaController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: #00000000;" styleClass="app-bar">
            <children>
                <Label styleClass="app-title" text="Ordens de Serviço" visible="false" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnEditarOSLista" onAction="#onEditarOS" text="Editar O.S." />
                <Button fx:id="btnNovaOSLista" onAction="#onNovaOS" text="Nova O.S." />
            </children>
            <padding>
                <Insets bottom="8" left="16" right="16" top="8" />
            </padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="12">
            <padding>
                <Insets bottom="16" left="16" right="16" top="12" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <children>
                        <Label text="Status:" />
                        <ChoiceBox fx:id="cbFiltroStatusLista" prefWidth="180" />
                        <TextField fx:id="txtBuscaOS" onAction="#onBuscar" promptText="Buscar OS por número ou título..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnBuscarOS" onAction="#onBuscar" text="Buscar" />
                    </children>
                </HBox>

                <TableView fx:id="tvOS" prefHeight="560">
                    <columns>
                        <TableColumn fx:id="colNumero" prefWidth="120" text="Número" />
                        <TableColumn fx:id="colTitulo" prefWidth="260" text="Título" />
                        <TableColumn fx:id="colCategoria" prefWidth="160" text="Categoria" />
                        <TableColumn fx:id="colSolicitante" prefWidth="180" text="Solicitante" />
                        <TableColumn fx:id="colResponsavel" prefWidth="180" text="Responsável" />
                        <TableColumn fx:id="colPrioridade" prefWidth="120" text="Prioridade" />
                        <TableColumn fx:id="colStatus" prefWidth="140" text="Status" />
                        <TableColumn fx:id="colPrazo" prefWidth="140" text="Prazo" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
