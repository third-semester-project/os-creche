<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="900" prefHeight="680" styleClass="root">

    <top>
        <HBox styleClass="app-bar" alignment="CENTER_LEFT" spacing="12">
            <children>
                <Label text="Relatórios" styleClass="app-title"/>
            </children>
            <padding>
                <Insets top="8" right="16" bottom="8" left="16"/>
            </padding>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <VBox spacing="16">
                    <padding>
                        <Insets top="24" right="24" bottom="24" left="24"/>
                    </padding>
                    <children>
                        <VBox styleClass="card" spacing="12">
                            <children>
                                <Label text="Relatórios de O.S." styleClass="section-title"/>
                                <GridPane hgap="12" vgap="8">
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="160" prefWidth="200"/>
                                        <ColumnConstraints hgrow="ALWAYS"/>
                                    </columnConstraints>

                                    <Label text="Período:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <HBox spacing="8" GridPane.rowIndex="0" GridPane.columnIndex="1">
                                        <children>
                                            <DatePicker fx:id="dpInicio" promptText="Início"/>
                                            <DatePicker fx:id="dpFim" promptText="Fim"/>
                                            <Button text="Gerar" fx:id="btnGerarRelatorio"/>
                                        </children>
                                    </HBox>

                                    <Label text="Status:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <ChoiceBox fx:id="cbStatus" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>

                                    <Label text="Categoria:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <ChoiceBox fx:id="cbCategoria" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="200"/>
                                </GridPane>
                            </children>
                            <padding>
                                <Insets top="16" right="16" bottom="16" left="16"/>
                            </padding>
                        </VBox>

                        <VBox styleClass="card" spacing="12">
                            <children>
                                <Label text="Resultado" styleClass="section-title"/>
                                <TextArea fx:id="txtResultado" promptText="Saída/Resumo do relatório..." prefRowCount="12" wrapText="true"/>
                            </children>
                            <padding>
                                <Insets top="16" right="16" bottom="16" left="16"/>
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>