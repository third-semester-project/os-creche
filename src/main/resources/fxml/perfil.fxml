<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.creche.controller.PerfilController"
      spacing="12" styleClass="root" prefWidth="520" prefHeight="420">

    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <children>
        <Label text="Meu Perfil" styleClass="title"/>

        <Label fx:id="lblErro" styleClass="error" visible="false" managed="false"/>

        <VBox spacing="8">
            <children>
                <Label text="Nome completo:"/>
                <TextField fx:id="txtNome" promptText="Digite o nome completo"/>
            </children>
        </VBox>

        <VBox spacing="8">
            <children>
                <Label text="E-mail:"/>
                <TextField fx:id="txtEmail" promptText="Digite o e-mail"/>
            </children>
        </VBox>

        <VBox spacing="8">
            <children>
                <Label text="Nova senha (opcional):"/>
                <PasswordField fx:id="txtNovaSenha" promptText="Deixe vazio para nÃ£o alterar"/>
            </children>
        </VBox>

        <VBox spacing="8">
            <children>
                <Label text="Confirmar nova senha:"/>
                <PasswordField fx:id="txtConfirmaSenha" promptText="Repita a nova senha"/>
            </children>
        </VBox>

        <Region VBox.vgrow="ALWAYS"/>

        <HBox spacing="8" alignment="CENTER_RIGHT">
            <children>
                <Button text="Cancelar" onAction="#onCancelar"/>
                <Button text="Salvar" onAction="#onSalvar" styleClass="primary"/>
            </children>
        </HBox>
    </children>
</VBox>
